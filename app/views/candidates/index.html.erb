<h1>Listing candidates</h1>


<%= max_vote_count(@candidates) %>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
  </table>
    <td><%= candidate.name %></td>
     <td><%= candidate.votes_for %></td>
     <td><%= percentage_of_candidates(candidate) %></td>
     


<% if admin_signed_in? %>
    <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, confirm: 'Are you sure?', method: :delete %></td>
 <% end %>	
  </tr>

<% if admin_signed_in? or voter_signed_in? %>
 	<%= link_to 'Click to review before voting', candidate_path(candidate) %>
 <% end %>
	<br />   
</table>
<% end %>  

<br /> 
<br /> 
<br /> 
<div id="admin_nav">
    <%= link_to 'New Candidate', new_candidate_path %>
</div>
 


